# EditorConfig is awesome: https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Specific settings for markdown files
[*.md]
trim_trailing_whitespace = false

# Specific settings for JSON files
[*.json]
indent_style = space
indent_size = 2

# Specific settings for YAML files
[*.yml]
indent_style = space
indent_size = 2

# Specific settings for JavaScript and JSX files
[*.{js,jsx}]
indent_style = space
indent_size = 2
max_line_length = 80

# Specific settings for TypeScript and TSX files
[*.{ts,tsx}]
indent_style = space
indent_size = 2

# Specific settings for CSS and SCSS files
[*.{css,scss}]
indent_style = space
indent_size = 2

# Specific settings for HTML files
[*.html]
indent_style = space
indent_size = 2

# Specific settings for configuration files
[*.{env,ini}]
indent_style = space
indent_size = 2
